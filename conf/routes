# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
GET     /login                      controllers.LoginController.login
GET     /login/submit               controllers.LoginController.submitLogin
GET     /logout                     controllers.LoginController.logout
GET     /view/thread/               controllers.HomeController.viewThread(id: Long)
GET     /new/thread                 controllers.HomeController.newThread
GET     /new/post/:threadId         controllers.HomeController.newReply(threadId: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path = "/public", file: Asset)
